}

/*关闭按钮*/

QPushButton#closeAppBtn:!hover
{
    border-radius: 8px;
    background-color:black;
    outline: 10px;
}

QPushButton#closeAppBtn:hover
{
    border-image: url(:/icon/images/closeAppBtn_hover.png);
    border-radius: 8px;
    background-color:black;
    outline: 10px;
}

QPushButton#closeAppBtn:pressed
{
    border-radius: 8px;
    background-color:black;
    outline: 10px;
}

